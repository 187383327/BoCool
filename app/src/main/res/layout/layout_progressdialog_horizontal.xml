<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dip"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/tv_custom_progressdialog_horizontal_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ProgressBar 
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:id="@+id/pb_custom_progressdialog_horizontal_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
	<RelativeLayout 
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    <TextView 
	        android:id="@+id/tv_custom_progressdialog_horizontal_number"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"/>
	    <TextView 
	        android:id="@+id/tv_custom_progressdialog_horizontal_percent"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"/>
	</RelativeLayout>
</LinearLayout>
